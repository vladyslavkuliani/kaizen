<!DOCTYPE html>
<html>

  <head>
    <title>Kaizen</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', media: 'all' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css', media: 'all' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag "http://i.imgur.com/WcnucBI.png" %>

    <link rel="apple-touch-icon" sizes="144x144" href="http://i.imgur.com/5YhmK7O.png">
    <link rel="apple-touch-icon" sizes="114x114" href="http://i.imgur.com/rk2YWFn.png">

  </head>

  <body>
    <div>
      <nav class="navbar navbar-default navbar-fixed-top navigation-clean-button">
          <div class="container-fluid">
              <div class="navbar-header">
                  <%= link_to(image_tag('http://i.imgur.com/GxaU1bQ.png', class: 'img-responsive'), '/', class: 'navbar-brand navbar-link') %>
                  <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
              </div>
              <div class="collapse navbar-collapse" id="navcol-1">
                <p class="navbar-text navbar-right actions">
                  <% if current_manager %>
                    <strong><%= link_to('Signed in as ' + current_manager.name + ' ' + current_manager.last, '/profile', :method => :get, class: 'navbar-link login') %> <%= link_to("Logout", '/logout', :method => :get, class: 'btn btn-default action-button') %></strong>
                  <% else %>
                    <%= link_to("Log In", '/login', class: 'navbar-link login') %> <%= link_to("Sign Up", '/signup', class: 'btn btn-default action-button') %>
                  <% end %>
                </p>
              </div>
          </div>
      </nav>
    </div>

    <%= yield %>

  </body>
</html>
